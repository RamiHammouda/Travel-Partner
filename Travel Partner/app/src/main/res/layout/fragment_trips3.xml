<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripsFragment3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:text="@string/new_trip"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="50dp"
        android:background="@color/lightGrey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tripsTextColor"
        android:layout_marginTop="75dp"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:text="@string/gender"
        android:id="@+id/genderText"/>

    <EditText
        android:autofillHints="@string/all"
        android:inputType="none"
        android:enabled="false"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="95dp"
        android:id="@+id/all"
        android:hint="@string/all"
        android:textSize="15sp"/>
    <CheckBox
        android:id="@+id/checkBoxAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="335dp"
        />


    <EditText
        android:inputType="none"
        android:enabled="false"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="145dp"
        android:id="@+id/male"
        android:hint="@string/male"
        android:textSize="15sp"
        android:autofillHints="@string/male"/>
    <CheckBox
        android:id="@+id/checkBoxMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginStart="335dp"
        />

    <EditText
        android:inputType="none"
        android:enabled="false"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="195dp"
        android:id="@+id/female"
        android:hint="@string/female"
        android:textSize="15sp"
        android:autofillHints="@string/female"/>
    <CheckBox
        android:id="@+id/checkBoxFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginStart="335dp"
        />

    <EditText
        android:inputType="none"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:enabled="false"
        android:layout_marginTop="245dp"
        android:id="@+id/other"
        android:hint="@string/other"
        android:textSize="15sp"
        android:autofillHints="@string/other"/>
    <CheckBox
        android:id="@+id/checkBoxOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginStart="335dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tripsTextColor"
        android:layout_marginTop="315dp"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:text="Preferred Age"
        android:id="@+id/ageText"/>

    <EditText
        android:inputType="text"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="345dp"
        android:id="@+id/minimumAge"
        android:hint="0"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="355dp"
        android:layout_marginStart="195dp"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:text="to"/>

    <EditText
        android:inputType="text"
        android:gravity="center_horizontal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginTop="345dp"
        android:id="@+id/maximumAge"
        android:hint="100"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/previous"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:layout_marginTop="450dp"
        android:layout_marginRight="-10dp"
        android:layout_marginLeft="-140dp"
        android:backgroundTint="@color/lightGrey"
        android:background="@drawable/previous_trip_button"
        />

    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/next"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:layout_marginTop="450dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/create_trip_button"
        />


</FrameLayout>
</layout>